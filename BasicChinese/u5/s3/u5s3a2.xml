<?xml version="1.0" encoding="UTF-8"?>
<act type = "sc" afolder="saudio/" title="Listen carefully">
	<intro>Listen to the sentences below and decide what is being said.</intro>
	<item id="1">
		<quest correct="3" audio="u5s3a2a1.mp3">What does the customer want?</quest>
		<op fb="incorrect: listen again">another dish</op>
		<op fb="incorrect: listen again">to order</op>
		<op fb="correct"></op>
	</item>	
	<item id="2">
		<quest correct="3" audio="u5s3a2a2.mp3">How can the customer pay?</quest>
		<op fb="incorrect: listen again">only by cash</op>
		<op fb="incorrect: listen again">only by credit card</op>		
		<op fb="correct">either by cash or by credit card</op>
	</item>	
	<item id="3">
		<quest correct="2" audio="u5s3a2a3.mp3">What does the waitress give back?</quest>
		<op fb="incorrect: listen again">change and credit card</op>
		<op fb="correct">credit card and receipt</op>	
		<op fb="incorrect: listen again">change and receipt</op>
	</item>
</act>
